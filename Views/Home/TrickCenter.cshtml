@{
}

<h1>@Model.Name</h1>

<form action="/trickcenter" method="post">
    <input type="text" value="@Model.Name" name="name" hidden />

    <label for="trick">Tricks</label>
    <select id="trick" name="skill">
        @foreach (var item in ViewBag.skills)
        {
            if (!Model.tricks.Exists(t => t==item))
            { 
                <option value="@item">@item</option>
            }
        }
        
  </select>

    
    <button>Learn</button>
</form>